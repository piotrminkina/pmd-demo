{% extends '@PMDWorkflowDemo/layout.html.twig' %}


{% from '@PMDStateMachine/macros.html.twig' import tokens %}

{% block title %}
    {{ object.id }}
{% endblock %}

{% block content %}
    <dl>
        <dt>State:</dt>
        <dd>{{ object.state }}</dd>
    </dl>
{% endblock %}

{% block footer %}
    <form method="post" action="{{ path(app.request.attributes.get("_route"), app.request.attributes.get("_route_params")) }}" class="btn-group">
        {{ tokens(object, 'pmd_workflow_demo_invoice_state', {id: object.id}, {class: 'btn btn-default'}) }}
    </form>
{% endblock %}
