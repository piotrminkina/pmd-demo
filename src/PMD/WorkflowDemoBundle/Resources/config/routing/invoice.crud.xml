<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
            http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="pmd_workflow_demo_invoice_list" path="/" methods="GET">
        <default key="_controller">PMDWorkflowDemoBundle:CRUD:list</default>
    </route>

    <route id="pmd_workflow_demo_invoice_new" path="/new" methods="GET">
        <default key="_controller">PMDWorkflowDemoBundle:CRUD:create</default>
    </route>

    <route id="pmd_workflow_demo_invoice_create" path="/" methods="POST">
        <default key="_controller">PMDWorkflowDemoBundle:CRUD:create</default>
    </route>

    <route id="pmd_workflow_demo_invoice_read" path="/{id}" methods="GET">
        <default key="_controller">PMDWorkflowDemoBundle:CRUD:read</default>
        <requirement key="id">\d+</requirement>
    </route>

    <route id="pmd_workflow_demo_invoice_edit" path="/{id}/edit" methods="GET">
        <default key="_controller">PMDWorkflowDemoBundle:CRUD:update</default>
        <requirement key="id">\d+</requirement>
    </route>

    <route id="pmd_workflow_demo_invoice_update" path="/{id}" methods="PUT">
        <default key="_controller">PMDWorkflowDemoBundle:CRUD:update</default>
        <requirement key="id">\d+</requirement>
    </route>

    <route id="pmd_workflow_demo_invoice_remove" path="/{id}/remove" methods="GET">
        <default key="_controller">PMDWorkflowDemoBundle:CRUD:delete</default>
        <requirement key="id">\d+</requirement>
    </route>

    <route id="pmd_workflow_demo_invoice_delete" path="/{id}" methods="DELETE">
        <default key="_controller">PMDWorkflowDemoBundle:CRUD:delete</default>
        <requirement key="id">\d+</requirement>
    </route>
</routes>
